source $(dirname $0)/kvmrc
source $(dirname $0)/../../scripts_common.sh

DOMAIN="$1"
SOURCE="$2"
TARGET="$3"
TARGET_INDEX="$4"

DETACH_PARAMS="--domain $DOMAIN --target $TARGET"

exec_and_log "virsh --connect $LIBVIRT_URI detach-disk $DETACH_PARAMS" \
    "Could not detach $TARGET from $DOMAIN"
